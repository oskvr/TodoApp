@page
@model TodayModel
@{
    ViewData["Title"] = "Today";
}
<div class="flex items-baseline gap-2 p-3 border-b">
    <h3 id="list-title" class="text-4xl">Today</h3>
    <small class="text-gray-500">@DateTime.Now.ToString("dddd, MMMM dd")</small>
</div>

@if (Model.TodaysTasks.Count() <= 0)
{
    <div class="grid place-items-center mt-56">
        @if (Model.UserListCount <= 0)
        {
            <span class="text-gray-600 text-lg">You haven't created any lists</span>
            <a asp-page="/Lists/Create" class="border-0 p-2 hover:bg-blue-500">Create a new list</a>
        }
        else
        {
            <span class="text-gray-600">You don't have anything planned for today</span>

        }
    </div>
}
else
{
    <partial name="_ListOfTasksPartial" model="Model.TodaysTasks" />
}