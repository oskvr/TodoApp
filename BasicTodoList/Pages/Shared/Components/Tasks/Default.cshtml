@model TodoTask

@{
    ViewData["Title"] = "Add Task";
}

<h1>Create</h1>

<h4>TodoTask</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-page="/Tasks/Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input hidden asp-for="IsCompleted" />
            <input hidden asp-for="TodoListId" />
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DueAt" class="control-label"></label>
                <input asp-for="DueAt" class="form-control" />
                <span asp-validation-for="DueAt" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsImportant" />
                    @Html.DisplayNameFor(model => model.IsImportant)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

