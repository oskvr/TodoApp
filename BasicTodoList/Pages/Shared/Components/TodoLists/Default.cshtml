@model IEnumerable<TodoList>

<div class="mt-10">
    <div id="your-lists-title" class="flex justify-between items-baseline border-b">
        <h3 class="text-2xl font-thin p-2 flex items-center gap-2">
            <img src="/img/icons/your-lists_heading.svg" alt="" />
            Your Lists
        </h3>
        <a asp-page="/Lists/Create" class="mr-5 text-gray-500 hover:text-gray-700 text-sm">Create new</a>
    </div>
    <ul id="your-lists">
        @foreach (var list in Model)
        {
            <partial name="_SidebarListItemPartial" model="@(new SidebarListItemViewModel { IncompleteTasksCount = list.IncompleteCount, AspPage ="/Tasks/Index", Name=list.Name, RouteId=list.Id.ToString() })" />
        }
    </ul>
</div>
