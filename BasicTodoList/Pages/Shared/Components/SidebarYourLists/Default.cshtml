@model IEnumerable<TodoList>

<div class="mt-10">
    <div id="your-lists-title" class="flex justify-between items-baseline border-b">
        <h3 class="text-2xl font-thin p-2 flex items-center gap-2">
            <img src="/img/icons/your-lists_heading.svg" alt="" />
            Your Lists
        </h3>
        <a asp-page="/Lists/Create" class="mr-5 text-gray-500 hover:text-gray-700 text-sm flex items-center gap-2">
            Create new
            <span>
                <svg xmlns="http://www.w3.org/2000/svg" width="15" height="15" fill="currentColor" class="bi bi-plus-circle" viewBox="0 0 16 16">
                    <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z" />
                    <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z" />
                </svg>
            </span>
        </a>
    </div>
    <ul id="your-lists">
        @foreach (var list in Model)
        {
            <partial name="_SidebarListItemPartial" model="@(new SidebarListItemViewModel { IncompleteTasksCount = list.IncompleteCount, AspPage ="/Tasks/Index", Name=list.Name, RouteId=list.Id.ToString() })" />
        }
    </ul>
</div>
