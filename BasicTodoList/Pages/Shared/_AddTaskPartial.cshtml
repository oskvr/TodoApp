@model TodoTask

@*Partial for displaying the add task-box in lists*@
<div class="pb-20">
    <form method="post" class="rounded shadow transition hover:shadow-md w-1/3 absolute">
        <div asp-validation-summary="ModelOnly" class="text-red-500"></div>
        <input asp-for="Description" wrap="soft" id="add-task-input" placeholder="Add new task..." class="rounded bg-gray-50 focus:outline-none border-none w-full p-4" />
        <span asp-validation-for="Description" class="text-red-500"></span>
        <div id="add-task-extra" class="text-xs py-2 flex items-baseline gap-5 relative" style="display:none">
            <input class="rounded border-0 cursor-pointer text-xs" asp-for="DueAt" id="dueAt" placeholder="Set a due date" />
            <label class="flex items-center gap-1">
                <input class="rounded-full cursor-pointer h-3 w-3 text-green-500" asp-for="IsImportant" /> Mark as important
            </label>

            <div class="space-x-2">
                <button class="bg-red-500 hover:bg-red-600 transition text-white py-1 px-2 rounded">Add task</button>
                <a id="cancel-button" href="#">Cancel</a>
            </div>

        </div>
    </form>
</div>
