@page
@model IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Add Task</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TodoLists[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TodoLists[0].TaskCount)
            </th>
            <th>
                Role
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var list in Model.TodoLists)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => list.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => list.IncompleteCount)/@Html.DisplayFor(modelItem => list.TaskCount)
                </td>
                <td>
                    Creator
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@list.Id">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@list.Id">Details</a> |
                    <a asp-page="/Tasks/Index" asp-route-id="@list.Id">Show tasks</a> |
                    <a asp-page="./Invite" asp-route-id="@list.Id">Invite Collaborator</a> |
                    <a asp-page="./Delete" asp-route-id="@list.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
    <tbody>
        @foreach (var list in Model.CollaboratedLists)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => list.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => list.IncompleteCount)/@Html.DisplayFor(modelItem => list.TaskCount)
                </td>
                <td>
                    Collaborator
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@list.Id">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@list.Id">Details</a> |
                    <a asp-page="/Tasks/Index" asp-route-id="@list.Id">Show tasks</a> |
                    <a asp-page="./Delete" asp-route-id="@list.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
