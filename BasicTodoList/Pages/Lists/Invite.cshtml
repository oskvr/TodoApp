@page
@model InviteModel
@{
    ViewData["Title"] = "Invite collaborator";
}
<div class="grid place-items-center">
    <form method="post" class="grid justify-center rounded space-y-3 p-10 w-1/3">
        <img class="h-52" src="~/img/icons/undraw_completed_tasks.svg" alt="" />
        <h1 class="text-2xl font-thin">Invite a collaborator</h1>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div>
            <label asp-for="Email" class="block mt-2 text-xs font-semibold text-gray-600 uppercase">E-mail</label>
            <input asp-for="Email" placeholder="Enter the person's email" autocomplete="email" class="block w-full p-3 mt-2 text-gray-700 bg-gray-200 appearance-none focus:outline-none focus:bg-gray-300 focus:shadow-inner" required />
            <span asp-validation-for="Email" class="text-red-500"></span>
        </div>
        <div class="form-group">
            <button value="Invite" class="bg-red-400 hover:bg-red-500 text-white py-2 px-3 rounded">Invite</button>
            <a asp-page="/Tasks/Index" asp-route-id="@Model.Id">Back to list</a>
        </div>
    </form>
</div>
